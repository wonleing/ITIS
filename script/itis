#!/bin/bash
((`id -u` !=0)) && echo "You need to be root to run this script!" && exit 1
(($# != 1)) && echo "Usage: /etc/init.d/itis <start|stop|restart>" && exit 1
case "$1" in
  start)
    python /usr/itis/index.py &;;
  stop)
    pkill python;;
  restart)
    pkill python
    python /usr/itis/index.py &;;
  *)
    echo "Usage: /etc/init.d/itis <start|stop|restart>"
    exit 1;;
esac
